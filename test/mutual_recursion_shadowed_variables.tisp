(mr
  (let (even? n)
       (let even? odd?)
       (if (= n 0) true (even? (- n 1))))
  (let (odd? n)
       (if (= n 0) false (even? (- n 1)))))

(seq
  (write (even? 0))
  (write (odd? 0))
  (write (even? 1))
  (write (odd? 1))
  (write (even? 2))
  (write (odd? 2))
  (write (even? 3))
  (write (odd? 3))
  (write (even? 42))
  (write (odd? 42))
  (write (even? 2049))
  (write (odd? 2049)))
